<CloudBilling xmlns="http://www.wso2.org/cloud/billing">
    <!--Billing functionality enable/disable status-->
    <BillingEnable>true</BillingEnable>
    <DataServiceAPI>
        <RequestCount>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/requestcount</RequestCount>
        <Usage>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/usage</Usage>
        <Amendments>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/amendments</Amendments>
        <TenantAccount>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/tenantaccount?TENANT_DOMAIN={tenantDomain}</TenantAccount>
        <PendingDisableTenants>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/pendingdisables</PendingDisableTenants>
        <DisableTenant>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/disabletenant</DisableTenant>
        <SubscriptionStatus>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/subscriptionstatus</SubscriptionStatus>
        <BillingHistory>https://localhost:9453/services/WSO2CloudBillingDS.SecureHTTPEndpoint/billinghistory</BillingHistory>
        <User>admin</User>
        <Password>admin</Password>
        <HttpClientConfig>
            <Hostname>localhost</Hostname>
            <Port>9453</Port>
            <MaxConnectionsPerHost>50</MaxConnectionsPerHost>
            <MaxTotalConnections>50</MaxTotalConnections>
        </HttpClientConfig>
    </DataServiceAPI>
    <!--Global Trial period in days-->
    <TrialPeriod>14</TrialPeriod>
    <Zoura>
        <!--Zuora tenant credentials-->
        <User>USERNAME</User>
        <Password>PASSWORD</Password>
        <Currency>USD</Currency>

        <!--Payment Type EVERGREEN-->
        <TermType>EVERGREEN</TermType>
        <SignatureExpired>1800000</SignatureExpired>
        <HttpClientConfig>
            <Hostname>apisandbox.zuora.com</Hostname>
            <Port>443</Port>
            <MaxConnectionsPerHost>50</MaxConnectionsPerHost>
            <MaxTotalConnections>50</MaxTotalConnections>
        </HttpClientConfig>
        <HostedPage>
            <PublicKey>PUBLIC_KEY</PublicKey>
            <URL>https://apisandbox.zuora.com/apps/PublicHostedPageLite.do</URL>
            <EndPoint>https://apisandbox.zuora.com/apps/v1/rsa-signatures</EndPoint>
            <PageId>2c92c0f849f118b5014a09ca329b5df7</PageId>
            <PaymentGateway>test</PaymentGateway>
            <Locale>en</Locale>
        </HostedPage>
        <APIs>
            <Usage>https://apisandbox-api.zuora.com/rest/v1/usage</Usage>
            <AccountSummary>https://apisandbox-api.zuora.com/rest/v1/accounts/{account-key}/summary</AccountSummary>
            <RatePlans>https://apisandbox-api.zuora.com/rest/v1/subscriptions/accounts/{account-key}</RatePlans>
            <Accounts>https://apisandbox-api.zuora.com/rest/v1/accounts</Accounts>
            <CancelSubscription>https://apisandbox-api.zuora.com/rest/v1/subscriptions/{subscription-key}/cancel</CancelSubscription>
            <Subscriptions>https://apisandbox-api.zuora.com/rest/v1/subscriptions</Subscriptions>
            <PaymentMethods>https://apisandbox-api.zuora.com/rest/v1/payment-methods/credit-cards</PaymentMethods>
            <RemovePaymentMethod>https://apisandbox-api.zuora.com/rest/v1/payment-methods</RemovePaymentMethod>
            <InvoiceInfo>https://apisandbox-api.zuora.com/rest/v1/transactions/invoices/accounts/{account-key}</InvoiceInfo>
            <PaymentInfo>https://apisandbox-api.zuora.com/rest/v1/transactions/payments/accounts/{account-key}</PaymentInfo>
            <Products>https://apisandbox-api.zuora.com/rest/v1/catalog/products</Products>
        </APIs>
        <Subscriptions>
            <Subscription id="api_cloud">
                <Plan>
                    <Id>2c92c0f949ac00830149b83db24f1b77</Id>
                    <Name>Starter</Name>
                    <MaxDailyUsage>500</MaxDailyUsage>
                    <MaxAccounts>10</MaxAccounts>
                    <OverUsage>$5/1K</OverUsage>
                    <MonthlyRental>$100</MonthlyRental>
                    <PremiumLevel>1</PremiumLevel>
                </Plan>
                <Plan>
                    <Id>2c92c0f949ac00850149b856d515537b</Id>
                    <Name>Getting Traction</Name>
                    <MaxDailyUsage>100000</MaxDailyUsage>
                    <MaxAccounts>100</MaxAccounts>
                    <OverUsage>$5/1K</OverUsage>
                    <MonthlyRental>$250</MonthlyRental>
                    <PremiumLevel>2</PremiumLevel>
                </Plan>
                <Plan>
                    <Id>2c92c0f84b0795b8014b0b1ac63e6713</Id>
                    <Name>Medium</Name>
                    <MaxDailyUsage>500</MaxDailyUsage>
                    <MaxAccounts>10</MaxAccounts>
                    <OverUsage>$5/1K</OverUsage>
                    <MonthlyRental>$100</MonthlyRental>
                    <PremiumLevel>3</PremiumLevel>
                </Plan>
                <Plan>
                    <Id>2c92c0f84b079582014b0b2412bc143a</Id>
                    <Name>Large</Name>
                    <MaxDailyUsage>100000</MaxDailyUsage>
                    <MaxAccounts>100</MaxAccounts>
                    <OverUsage>$5/1K</OverUsage>
                    <MonthlyRental>$250</MonthlyRental>
                    <PremiumLevel>4</PremiumLevel>
                </Plan>
                <Plan>
                    <Id>2c92c0f949ac00800149b8333c0502b8</Id>
                    <Name>Extra-large</Name>
                    <MaxDailyUsage>500</MaxDailyUsage>
                    <MaxAccounts>10</MaxAccounts>
                    <OverUsage>$5/1K</OverUsage>
                    <MonthlyRental>$100</MonthlyRental>
                    <PremiumLevel>5</PremiumLevel>
                </Plan>
            </Subscription>
        </Subscriptions>
        <Usage>
            <EnableUsageUploading>true</EnableUsageUploading>
            <!--	<Cron>0 mm hh ? * * *</Cron> -->
            <Cron>0 57 11 ? * * *</Cron>
            <UsageUploadFileLocation>USAGE_CSV_PATH</UsageUploadFileLocation>
        </Usage>
        <!--For testing purposes change the value to false-->
        <SSLCertificateValid>false</SSLCertificateValid>
        <SubscriptionCleanUp>
            <EnableCleanUp>true</EnableCleanUp>
            <Cron>0 57 23 ? * * *</Cron>
            <!--Roles to be removed once the service subscription is suspended.
             Please add the roles in a comma separated manner-->
            <Roles>publisher, subscriber</Roles>
        </SubscriptionCleanUp>
    </Zoura>
    <SSORelyingParty>
        <KeyStorePath>KEYSTORE_PATH</KeyStorePath>
        <TrustStorePassword>wso2carbon</TrustStorePassword>
    </SSORelyingParty>
    <Utils>
        <APICloud>
            <!--This is for statistical purposes .Usage display period in days-->
            <UsageDisplayPeriod>30</UsageDisplayPeriod>
        </APICloud>
    </Utils>
</CloudBilling>
