<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>cloud-components</artifactId>
        <groupId>org.wso2.carbon.cloud</groupId>
        <version>1.0.0</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>org.wso2.carbon.cloud.signup</groupId>
    <artifactId>org.wso2.carbon.cloud.selfSignup</artifactId>
    <version>1.0.0</version>
    <name>Cloud - SelfSignup - API Cloud Self Signup Feature Component</name>
    <modelVersion>4.0.0</modelVersion>

    <packaging>bundle</packaging>

    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>

        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>

        <repository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>wso2-maven2-repository-1</id>
            <url>http://dist.wso2.org/maven2</url>
        </pluginRepository>
        <pluginRepository>
            <id>wso2-maven2-repository-2</id>
            <url>http://dist.wso2.org/snapshots/maven2</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>

        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.api</artifactId>
            <version>5.0.3</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.impl</artifactId>
            <version>5.0.3</version>
        </dependency>

        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>1.4.0</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.tenant.mgt</artifactId>
            <version>2.2.2</version>
        </dependency>

        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>org.apache.axis2.osgi</artifactId>
            <version>1.6.2</version>
        </dependency>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
            <version>4.4.3</version>
        </dependency>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
            <version>4.2.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Version>1.0.0</Bundle-Version>
                        <Private-Package>org.wso2.carbon.cloud.signup.internal</Private-Package>
                        <Import-Package>
                            org.wso2.carbon.user.core.*; version="[4.4.1, 4.5.0)",
                            org.wso2.carbon.user.api.*; version="1.0.1",
                            org.wso2.carbon.utils.multitenancy; version="4.4.3",
                            org.wso2.carbon.utils; version="4.4.3",
                            org.wso2.carbon.stratos.common.beans; version="4.4.8",
                            org.wso2.carbon.context; version="4.4.3",
                            org.wso2.carbon.apimgt.impl.workflow; version="5.0.3",
                            org.wso2.carbon.apimgt.impl.utils; version="5.0.3",
                            org.wso2.carbon.apimgt.impl.dto; version="5.0.3",
                            org.wso2.carbon.apimgt.impl; version="5.0.3",
                            org.wso2.carbon.apimgt.api; version="5.0.3",
                            org.osgi.service.component; version="1.2.0",
                            org.json.simple.parser; version="0.0.0",
                            org.json.simple; version="0.0.0",
                            org.apache.commons.logging; version="1.2.0",
                            org.apache.axis2.transport.http; version="1.6.1.wso2v16",
                            org.apache.axis2.description; version="1.6.1.wso2v16",
                            org.apache.axis2.context; version="1.6.1.wso2v16",
                            org.apache.axis2.client; version="1.6.1.wso2v16",
                            org.apache.axis2.addressing; version="1.6.1.wso2v16",
                            org.apache.axis2; version="1.6.1.wso2v16",
                            org.apache.axiom.om.util; version="1.2.11.wso2v9",
                            org.apache.axiom.om; version="1.2.11.wso2v9",
                            javax.activation; version="${imp.pkg.version.javax.activation}",
                            javax.xml.stream; version="1.0.1",
                            javax.sql; version="0.0.0",
                            javax.naming; version="0.0.0",
                            javax.mail.internet; version="1.4.0",
                            javax.mail; version="1.4.0",
                            org.wso2.carbon.tenant.mgt.services; version="2.2.2"
                        </Import-Package>
                        <Export-Package>
                            org.wso2.carbon.cloud.signup.configReader; version="1.0.0",
                            org.wso2.carbon.cloud.signup.constants; version="1.0.0",
                            org.wso2.carbon.cloud.signup.dbAccess; version="1.0.0",
                            org.wso2.carbon.cloud.signup.emailSender; version="1.0.0",
                            org.wso2.carbon.cloud.signup.fileReader; version="1.0.0",
                            org.wso2.carbon.cloud.signup.util; version="1.0.0",
                            org.wso2.carbon.cloud.signup.workflow; version="1.0.0",
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
                <version>1.7.4</version>
                <executions>
                    <execution>
                        <id>generate-scr-scrdescriptor</id>
                        <goals>
                            <goal>scr</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>