// activate account on first login to given cloud
var activateAccount = function (tenantDomain, serviceId) {
    var billingType = JSON.parse(cloudBillingDAO.getTypeForTenantSubscription(serviceId, tenantDomain))[0]["TYPE"];
    var result = JSON.parse(cloudBillingDAO.selectAllFromBillingStatus(tenantDomain, serviceId, billingType));

    if (result.length > 0) {
        var sqlDateFormat = dateTimeFormatter(MYSQL_DATETIME_FORMAT);
        var adminModule = jagg.module("admin");

        if (result[0]["TYPE"] === type.TRIAL) {
            if (result[0]["STATUS"] === status.ACTIVE) {

                var startDate = result[0]["START_DATE"];
                var endDate = result[0]["END_DATE"];

                adminModule.getCloudUtil(serviceId).publishTenantSubscription(tenantDomain, serviceId, billingType,
                                                                              startDate, endDate, status.ACTIVE);

            } else if (result[0]["STATUS"] === status.INACTIVE) {

                var trialStartDate = new Packages.java.util.Date();
                var trialEndDate = addDays(trialStartDate, parseInt(billingCoreService.getTrialPeriod(serviceId)));

                cloudBillingDAO.updateBillingStatus(status.ACTIVE, sqlDateFormat.format(trialStartDate),
                                                    sqlDateFormat.format(trialEndDate), tenantDomain, serviceId, type.TRIAL);

                adminModule.getCloudUtil(serviceId).publishTenantSubscription(tenantDomain, serviceId, billingType,
                                                                              sqlDateFormat.format(trialStartDate), sqlDateFormat.format(trialEndDate), status.ACTIVE);
            }
        } else if (result[0]["TYPE"] === type.FREE && result[0]["STATUS"] === status.ACTIVE) {

            var startDate = result[0]["START_DATE"];
            var endDate = result[0]["END_DATE"];

            adminModule.getCloudUtil(serviceId).publishTenantSubscription(tenantDomain, serviceId, billingType,
                                                                          startDate, endDate, status.ACTIVE);

        } else if (result[0]["TYPE"] === type.PAID) {
            var startDate = result[0]["START_DATE"];
            var endDate = result[0]["END_DATE"];
            var statusColumn = result[0]["STATUS"];

            adminModule.getCloudUtil(serviceId).publishTenantSubscription(tenantDomain, serviceId, "integration_cloud_starter",
                                                                          startDate, endDate, statusColumn);
        } else {
        }
    }
};

