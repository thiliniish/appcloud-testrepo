var getPaymentPlanFromId = function (serviceId, paymentPlanId) {
    var subscriptions = billingCoreService.getPaymentPlansForServiceId(serviceId);
    for (var i = 0; i < subscriptions.length; i++) {
        var item = subscriptions[i];
        var id = item.getId();
        if (id == paymentPlanId) {
            return item.getName();
        }
    }
    return null;
};

