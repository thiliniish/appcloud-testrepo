    var hasTenantLevelUserMgtPermission =function () {
        var username;
        var result;
        try{
            //username = checkUserAuthenticated();
            result= checkUserAuthorization(PERMISSION_TENANT_LEVEL_USR_MGT);
        }catch (e){
