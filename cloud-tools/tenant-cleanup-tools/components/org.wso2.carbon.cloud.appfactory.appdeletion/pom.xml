<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.wso2.carbon.cloud</groupId>
        <artifactId>cloud-tools</artifactId>
        <version>1.0.0</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.cloud.appfactory.appdeletion</artifactId>
    <version>1.0.0</version>
    <packaging>bundle</packaging>
    <name>Cloud - Application deletion component</name>
    <description>Tenant's application deletion bundle</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-scr-scrdescriptor</id>
                        <goals>
                            <goal>scr</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.wso2.carbon.cloud.appfactory.appdeletion.internal
                        </Private-Package>
                        <Import-Package>
                            org.wso2.carbon.user.core.*; version="${imp.pkg.version.carbon.platform}",
                            org.wso2.carbon.utils; version="${imp.pkg.version.carbon.platform}",
                            org.wso2.carbon.core; version="${imp.pkg.version.carbon.platform}",
                            org.wso2.carbon.context; version="${imp.pkg.version.carbon.platform}",
                            org.wso2.carbon.appfactory.tenant.mgt.*; version="${org.wso2.appfactory.version}",
                            org.wso2.carbon.appfactory.core.*; version="${org.wso2.appfactory.version}",
                            org.wso2.carbon.appfactory.application.mgt.*; version="${org.wso2.appfactory.version}",
                            org.wso2.carbon.appfactory.common.*; version="${org.wso2.appfactory.version}",
                            org.apache.commons.logging.*; version="${imp.pkg.version.commons-logging}",
                            org.wso2.carbon.user.api; version="${imp.pkg.version.carbon.user.api}",
                            org.osgi.service.component; version="${imp.pkg.version.osgi.service.component}",
                            org.osgi.framework; version="${imp.pkg.version.osgi.framework}",
                            org.wso2.carbon.registry.*; version="${imp.pkg.version.carbon.kernel.registry}",
                            org.apache.commons.lang; version="${imp.pkg.version.commons-lang}",
                            org.wso2.carbon.ntask.common,
                            org.w3c.dom,
                            org.json.simple.*,
                            javax.net.ssl,
                            javax.net,
                            javax.crypto,
                            javax.xml.namespace,
                            javax.xml.parsers,
                            javax.xml.bind,
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk16</artifactId>
            <version>${bcprov-jdk16.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core.services</artifactId>
            <version>${imp.pkg.version.carbon.platform}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
            <version>${imp.pkg.version.carbon.platform}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.core</artifactId>
            <version>${imp.pkg.version.carbon.platform}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.api</artifactId>
            <version>${imp.pkg.version.carbon.platform}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
            <version>${imp.pkg.version.carbon.platform}</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>${imp.pkg.version.commons.codec.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>${commons.logging.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.appfactory</groupId>
            <artifactId>org.wso2.carbon.appfactory.application.mgt</artifactId>
            <version>${org.wso2.appfactory.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.appfactory</groupId>
            <artifactId>org.wso2.carbon.appfactory.core</artifactId>
            <version>${org.wso2.appfactory.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.appfactory</groupId>
            <artifactId>org.wso2.carbon.appfactory.tenant.mgt</artifactId>
            <version>${org.wso2.appfactory.version}</version>
        </dependency>
    </dependencies>

</project>